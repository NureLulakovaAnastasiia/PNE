@{
    ViewData["Title"] = "Home Page";
}

<h2>Змінити дужки в рядку</h2>

<form method="post" asp-action="ChangeString">
    <label for="input">Введіть рядок:</label>
    <input type="text" id="input" name="input" class="form-control" />
    <br />
    <button type="submit" class="btn btn-primary">Обробити</button>
</form>

@if (ViewBag.Result != null)
{
    <h3>Результат:</h3>
    <p>@ViewBag.Result</p>
}